<!DOCTYPE html>
<html lang="pt-br">

<head>
    <% include include/head.ejs %>
</head>

<body>
    <% include include/header.ejs %>

    <main class="container form form-group">
        <form action="/api/inserir" method="POST" encType="multipart/form-data">

            <div class="form-group">
                <label for="titulo">Título</label>
                <input type="text" id="titulo" name="title" class="form-control col-4" placeholder="Titulo" required>
            </div>

            <div class="form-group">
                <label for="tema">Descrição</label>
                <input type="text" id="tema" name="description" class="form-control col-4" placeholder="Descrição" required>
            </div>

            <div class="form-group custom-file col-4 tamanho-butao-tcc">
                <input name="pdfzin" type="file" class="custom-file-input" id="customFile">
                <label id="nome_input_arquivo" class="custom-file-label" for="customFile">Arquivo TCC</label>
                <small class="small-upload">Faça o upload do seu arquivo</small>
                <br><br>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-info">Enviar</button>
            </div>
        </form>

    </main>

    <% include include/footer.ejs %>
    <% include include/scripts.ejs %>
</body>

</html>